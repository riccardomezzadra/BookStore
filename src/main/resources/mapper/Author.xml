<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Author">
    <resultMap id="AuthorMap" type="Author">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="surname" property="surname"/>
        <result column="photo_url" property="photoURL"/>
        <result column="nationality" property="nationality"/>
        <result column="birth_place" property="birthPlace"/>
        <result column="date_of_birth" property="dateOfBirth"/>
        <result column="date_of_death" property="dateOfDeath"/>
        <result column="gender" property="gender"/>
    </resultMap>


    <select id="selectAll" resultMap="AuthorMap">SELECT * from Author ORDER BY name;</select>
    <!--
    <select id="selectAll" resultMap="AuthorMap">
        SELECT id,
        name,
        surname,
        photo_url,
        nationality,
        birth_place,
        date_of_birth,
        date_of_death,
        gender

        FROM Author

        order by name;
    </select>
    -->

    <select id="selectById" resultMap="AuthorMap">
        SELECT * From Author WHERE id = #{id};
    </select>

    <insert id="insert" parameterType="Author" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO Author
        (name, surname, photo_url, nationality, birth_place, date_of_birth, date_of_death, gender)
        VALUES (#{name}, #{surname}, #{photoURL}, #{nationality}, #{birthPlace}, #{dateOfBirth}, #{dateOfDeath},
        #{gender})
        <selectKey keyProperty="id" resultType="Long" order="AFTER">
            SELECT currval('author_id_seq');
        </selectKey>
    </insert>

    <update id="update" parameterType="Author">
        UPDATE Author
        SET
        name = #{name},
        surname = #{surname},
        photo_url = #{photoURL},
        nationality = #{nationality},
        birth_place = #{birthPlace},
        date_of_birth = #{dateOfBirth},
        date_of_death = #{dateOfDeath},
        gender = #{gender}
        WHERE id = #{id};
    </update>

    <delete id="delete" parameterType="Long">
        DELETE from Author WHERE id = #{id};
    </delete>

</mapper>

